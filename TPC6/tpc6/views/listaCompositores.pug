extends layout

block content
    .w3.ward4
        header.w3-container.w3-teal
            h1= "Lista de Compositores"
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th Period
                each comp in lista
                    tr
                        td
                            a(href="/compositores/" + comp._id)= comp._id
                        td= comp.nome
                        td
                            a(href="/periodos/" + comp.periodo)= comp.periodo
        footer.w3-container.w3-pink
            address Gerado por EngWeb2024 em #{data} 