extends layout

block content
  .w3-card4
    header.w3-container.w3-pink
      h1= titulo
    .w3-container 
      table.w3-table-all
                tr
                    th Id
                    th Name
                    th Bio
                    th Birth date
                    th Death date
                    th Period
                    th Actions
                tr
                    td
                        a(href="/compositores/" + comp._id)= comp._id
                    td= comp.nome
                    td= comp.bio
                    td= comp.dataNasc
                    td= comp.dataObito
                    td
                        a(href="/periodos/" + comp.periodo)= comp.periodo
                    td
                            a.w3-button.w3-blue(href=`/compositores/edit/${comp.id}`) Editar
                            form(action=`/compositores/delete/${comp.id}`, method="POST")
                              button.w3-button.w3-red(type="submit") Apagar

    footer.w3-container.w3-pink 
      address Gerado por EngWeb2024 em #{data}